##############################################
# üîß Eclipse-Bot Configuration File (example)
# Copy this file to `.env` and replace values
##############################################

######################
# ü§ñ Discord Bot Setup
######################

# Discord bot token from the Developer Portal
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN

# Optional: Force setup for a specific guild on first boot
# (Bot will DM the owner of this guild if no config found)
GUILD_ID=123456789012345678


######################
# ‚öôÔ∏è Logging + Debugging
######################

# Log verbosity level: one of [low | high | debug]
LOG_LEVEL=low

# Enable verbose internal debugging
DEBUG=false


######################
# üóÉÔ∏è Database
######################

# SQLite DB file path
# Use ':memory:' to store in RAM (non-persistent), or './eclipse.db' to save to disk
SQLITE_DB_FILE=:memory:

# Show schema sync logs (true/false)
DB_SYNC_LOGGING=true


######################
# üöß Developer Options
######################

# Enable test mode (prevents real Discord or Archipelago interaction)
# TEST_MODE=true

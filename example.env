##############################################
# üîß Eclipse-Bot Configuration File
# Copy this file to `.env` and replace values
##############################################

######################
# ü§ñ Discord Bot Setup
######################

# Discord bot token from the Developer Portal
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# SuperUser ID (the Discord user who runs initial setup)
SUPER_USER_ID=YOUR_DISCORD_USER_ID

# Discord Application (Client) ID from Developer Portal
DISCORD_CLIENT_ID=1322007796035878942

# Default Guild ID (optional, for forced setup on startup)
GUILD_ID=1322007577734680669


######################
# ‚öôÔ∏è Logging + Debugging
######################

# Log verbosity level: one of [low | high | debug]
LOG_LEVEL=low

# Enable verbose internal debugging (true/false)
DEBUG=false


######################
# üóÑÔ∏è Database (MongoDB)
######################

# MongoDB connection URI
# If using Docker auto-setup, this will be generated and stored in config automatically
MONGO_URI=mongodb://ecbot:password@localhost:27017

# MongoDB database name
MONGO_DB_NAME=ecbot


######################
# üöß Developer Options
######################

# Enable test mode (prevents real Discord or Archipelago interaction)
TEST_MODE=false

# Allow Docker-based MongoDB auto-provisioning during setup (true/false)
ALLOW_DOCKER_MONGO=true

# Default port range for hosted Archipelago servers
PORT_RANGE_START=38200
PORT_RANGE_END=38300

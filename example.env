##############################################
# üîß Eclipse-Bot Configuration File (example)
# Copy this file to `.env` and replace values
##############################################

######################
# üåê Archipelago Setup
######################

# Host and port of the Archipelago server (e.g., archipelago.gg:38281)
ARCHIPELAGO_SERVER=archipelago.example.com:38281

# Your slot name in the multiworld
ARCHIPELAGO_SLOT=YourPlayerName

# Optional: Slot password (leave blank if none)
# ARCHIPELAGO_PASSWORD=your_password_here


######################
# ü§ñ Discord Bot Setup
######################

# Discord bot token from the Developer Portal
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN

# Discord channel IDs (numeric strings only)
# Archipelago chat relay
DISCORD_CHANNEL_CHAT=000000000000000001
# Hint notifications
DISCORD_CHANNEL_HINTS=000000000000000002
# Trade events
DISCORD_CHANNEL_TRADES=000000000000000003
# Internal logs/errors
DISCORD_CHANNEL_LOGS=000000000000000004


######################
# ‚öôÔ∏è Logging + Debugging
######################

# Log verbosity: one of [low | high | debug]
LOG_LEVEL=low

# Enable verbose debugging mode
DEBUG=false


######################
# üóÉÔ∏è Database
######################

# Path to SQLite file (default: ./eclipse.db)
# SQLITE_DB_FILE=eclipse.db

# Whether to show SQL schema sync info
# DB_SYNC_LOGGING=true


######################
# üöß Developer Options
######################

# Enable test mode (disables actual Discord or AP sending)
# TEST_MODE=true

# Auto-promote Discord admins to owner role
# AUTO_PROMOTE_ADMINS=true

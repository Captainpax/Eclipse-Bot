##############################################
# üîß Eclipse-Bot Configuration File
# Copy this file to `.env` and replace values
##############################################

######################
# ü§ñ Discord Bot Setup
######################

# Discord bot token from the Developer Portal
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# SuperUser ID (the Discord user who runs initial setup)
SUPER_USER_ID=YOUR_DISCORD_USER_ID

# Discord Application (Client) ID from Developer Portal
DISCORD_CLIENT_ID=1322007796035878942

######################
# ‚öôÔ∏è Logging + Debugging
######################

# Log verbosity level: one of [low | high | debug]
LOG_LEVEL=low

# Enable verbose internal debugging (true/false)
DEBUG=false

######################
# üöß Developer Options
######################

# Enable test mode (prevents real Discord or Archipelago interaction)
TEST_MODE=false

######################
# üóÑÔ∏è MongoDB Configuration
######################

# Auto-generated during first setup if using Docker
# If you are using your own MongoDB, set these manually

# Full Mongo connection URI
MONGO_URI=mongodb://user_generated:password_generated@ecbot-mongo:27017/eclipse-bot?authSource=admin

# These are used by mongoose auth (must match your URI credentials)
MONGO_USER=user_generated
MONGO_PASS=password_generated

# Optional: override database name (default: ecbot)
MONGO_DB_NAME=ecbot
